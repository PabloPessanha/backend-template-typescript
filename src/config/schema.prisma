generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(uuid())
  name    String?
  age     Int?
  address Address?
}

model Address {
  id      Int @id @default(autoincrement())
  state   String
  cep     String
  street  String?
  user    User? @relation(fields: [userId], references: [id])
  userId  String? @unique
}
